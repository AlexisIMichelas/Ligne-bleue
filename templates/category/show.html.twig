{% extends 'base.html.twig' %}

{% block body %}

	<h1 class="text-center text-secondary mb-5 text-uppercase">{{ category.title }}</h1>
	<div class="container mt-5">
		<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
			{% for tutorial in category.tutorials %}
				{% if tutorial.ispublic %}
					<div class="col">
						<a href="{{ path("tutorial_show", {'slug': tutorial.slug}) }}" class="btn btn-secondary p-4 mb-5 w-75">{{ tutorial.name }}</a>
					</div>
				{% else %}
					<div class="col">
						<a href="#" class="btn btn-dark p-4 mb-5 w-75 position-relative">
							<i class="fa-solid fa-lock position-absolute bottom-0 end-0 fa-2x"></i>
							{{ tutorial.name }}</a>
					</div>
				{% endif %}
					{# <a href="{{ path("tutorial_show", { id: tutorial.id }) }}">Voir la fiche</a> #}

				{% else %}
					Aucun tutoriel trouvé dans cette catégorie.
					<br>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
