{% extends 'base.html.twig' %}

{% block title %}Accueil - Ligne bleue
{% endblock %}

{% block body %}
	<div class="white-stripe text-center mt-3">
		<img src="{{ asset('build/images/logo.png') }}" alt="">
	</div>
	<div class="pink-stripe">
		<h1 class="text-center mb-5">
			Bienvenue sur
			{{ website }}
			!
		</h1>
	</div>
	<div class="bg-secondary p-4 mb-5 text-center">{{ slogan }}</div>
	<div class="container">
		<div class="row">
			<div class="col m-auto fw-bold text-center h4">Prêt à te former 
				au numérique ?<br>Enregistre toi !</div>
			<div class="col">
				<button type="button" class="d-flex btn btn-secondary m-auto mb-4 btn-lg w-75">CONNEXION</button>
				<button type="button" class="d-flex btn btn-secondary m-auto mb-4 btn-lg w-75">INSCRIPTION</button>
				<button type="button" class="d-flex btn btn-success m-auto mb-4 btn-lg w-75">JE VEUX TESTER SANS M'ENREGISTRER</button>
			</div>
			<div class="col m-auto">{{ presentation }}</div>
		</div>
	</div>

{% endblock %}
