{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('build/bootstrap.js') }}"></script>

    <script>
        var avatarDropdown = document.getElementById('avatarDropdown');
        var avatarImg = document.createElement('img');
        avatarImg.src = "{{ asset('build/avatars/' ~ app.user.avatar.getPath()) }}";
        avatarImg.alt = "Avatar de l'utilisateur";

        avatarDropdown.innerHTML = '';
        avatarDropdown.appendChild(avatarImg);
    </script>
{% endblock %}
