            <img src="{{ asset('build/images/logo_v2.png') }}" alt="" class="mt-2">
        </div>
    </li>
    <li>
        <div class="btn-group me-5">
            <button type="button" class="btn btn-light dropdown-toggle" id="avatarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end">
