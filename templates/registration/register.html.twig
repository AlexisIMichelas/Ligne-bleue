{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center text-light mb-5">Qui es-tu ?
			<br>
			Compl√®te ton pofil !</h1>
		<div class="row">

			<div class="bg-secondary m-auto col-10 col-md-8 col-lg-6 p-5 rounded">
				<h4 class="text-center">Inscription</h4>
				{{ form_errors(registrationForm) }}
				{{ form_start(registrationForm) }}
				<div class="form-group mb-3">
					{{ form_row(registrationForm.email, {'attr': {'class': 'form-control bg-primary p-2 border-0
                            text-light w-100', 'placeholder': 'Tape ton adresse mail ici'}}) }}
				</div>

				<div class="form-group mb-2">
					<div class="input-group">
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control bg-primary p-2 border-0
                            text-light', 'placeholder': 'Tape ton mot de passe ici'}}) }}
						<span class="input-group-text bg-primary border-0">
							<a href="#" class="toggle_hide_password">
								<i id="eyeIcon" class="fa-regular fa-eye-slash text-secondary" aria-hidden="true"></i>
							</a>
						</span>
					</div>
				</div>

				<div class="form-group mb-2">
					{{ form_row(registrationForm.conditions, {'attr': {'class': ' ms-2 bg-primary form-check-input border-0'}}) }}
				</div>
			</div>

		</div>
	</div>

	<button type="submit" class="btn btn-success rounded-pill ms-auto me-auto mt-3">Clique ici pour t'inscrire</button>
	{{ form_end(registrationForm) }}

{% endblock %}
