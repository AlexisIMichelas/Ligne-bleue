{% extends 'layout/layout-center.html.twig' %}

{% block title %}Tutoriel - {{ tutorial.name }}{% endblock %}

{% block body %}
    <div>
        <h1 class="text-center text-light mt-5">Tutoriel : {{ tutorial.name }}</h1>
    </div>

    <div class="container">
        <div class="bg-secondary rounded m-auto mt-5 p-4 col-10">
            <h2 class="text-center mb-2 mt-3">Objectifs</h2>
            <ul class="text-center list-unstyled mb-5">
                <li>{{ tutorial.objective }}</li>
            </ul>

            <div class="row-cols-md-2 d-flex flex-column flex-md-row">
                <div class="col m-auto fw-bold text-center">
                    <p>Clique sur cette vid√©o <i class="fa-solid fa-arrow-down"></i></p>
                    <iframe height="250" src="https://www.youtube.com/embed/2LjWULDEpJs" class="rounded w-100"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            allowfullscreen></iframe>
                </div>

                <div class="col m-auto">
                    <p class="p-1 p-md-3 p-lg-5">{{ tutorial.description }}</p>
                </div>
            </div>

            <h1 class="text-center mt-3 mb-md-3 mt-md-5">Quiz</h1>

            <form method="post" class="mb-5">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        {% for question in tutorial.questions %}
                            <div class="swiper-slide d-flex flex-column justify-content-center align-items-center">
                                <div class="text-center mb-2 mb-md-5 mt-3 mt-md-5">
                                    <h3>{{ question.title }}</h3>
                                </div>
                                <ul class="options list-unstyled w-75">
                                    {% for answer in question.answers %}
                                        <li class="answer-list bg-primary text-light mb-2 p-2 rounded-4 m-auto">
                                            <label for="answer-{{ answer.id }}">
                                                <input type="radio" class="me-2" name="{{ question.id }}" value="{{ answer.id }}" id="answer-{{ answer.id }}">
                                                {{ answer.text }}
                                            </label>
                                        </li>
                                    {% endfor %}
                                </ul>
                                {% if loop.last %}
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success">Valider</button>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
