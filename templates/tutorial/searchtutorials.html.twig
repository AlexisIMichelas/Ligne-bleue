{% extends 'layout/layout-center.html.twig' %}


{% block content %}
	<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
	{% if pagination is defined and pagination|length > 0 %}
		{% for article in pagination %}
			<tr {% if loop.index is odd %} class="color" {% endif %}>
				<div class=" col d-flex justify-content-center">
				<button type="button" class="btn btn-secondary p-3 mb-5 w-75 href='#'">{{ article.name }}</button>
                </div>
			</tr>
		{% endfor %}
    {% else %}
        <h1 class= 'text-white m-auto'> Aucun tutorial trouv√©. </h1>
	{% endif %}
    </div>
{% endblock %}
